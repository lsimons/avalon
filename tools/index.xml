  </project>
  -->

  <resource>
    <info>
      <group>avalonx/supplemental</group>
      <name>mailapi</name>
      <version>1.3.1</version>
      <type>jar</type>
    </info>
    <gump>
      <alias>javamail</alias>
      <id>javamail</id>
    </gump>
  </resource>

</index>
