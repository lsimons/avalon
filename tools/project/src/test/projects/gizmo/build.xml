<?xml version="1.0" encoding="UTF-8" ?>

<project name="gizmo" default="dist" basedir="." 
    xmlns:x="antlib:org.apache.avalon.tools">
  <property file="build.properties"/>
  <import file="${project.home}/standard.xml"/>
  
  <target name="init" depends="standard.init">
    <x:filter key="widget" feature="name" token="WIDGET_NAME"/>
    <x:filter key="widget" feature="group" token="WIDGET_GROUP"/>
    <x:filter key="widget" feature="version" token="WIDGET_VERSION"/>
    <x:filter key="widget" feature="uri" token="WIDGET_URI"/>
  </target>

</project>
