<?xml version="1.0"?>
<!--
                                README!

    Basic config file that sets up context for server application.

-->
<environment>

  <logs version="1.1">

    <factories>
      <factory type="file" class="org.apache.avalon.excalibur.logger.factory.FileTargetFactory"/>
      
    </factories>

    <targets>
      <file id="default">
        <filename>${app.home}/logs/avalon-demo.log</filename>
        <format type="extended">
          %6.6{priority} %10.10{time} [%8.8{category}] (%{context}): %{message}\n%{throwable}
        </format>
      </file>

      <file id="access_log">
        <filename>${app.home}/logs/access.log</filename>
        <format type="extended">
          %{message}\n
        </format>
      </file>
    </targets>

    <categories>
      <category name="" log-level="DEBUG">
        <log-target id-ref="default"/>
      </category>
      <category name="access" log-level="INFO">
        <log-target id-ref="access_log"/>
      </category>
    </categories>
  </logs>

  <policy>
    <grant code-base="sar:SAR-INF/lib/*">
      <permission class="java.security.AllPermission" />
    </grant>
  </policy>

</environment>
