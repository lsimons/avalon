
<kernel>

   <logging priority="INFO" target="default">
      <category name="/sys/logger" priority="WARN"/>
      <target name="kernel">
        <file location="kernel.log" />
      </target>
   </logging>

   <categories priority="WARN">
     <category priority="DEBUG"  name="/sys" />
   </categories>

   <engine>

     <library dir=".">
       <include name="build/lib"/>
     </library>

     <classpath>
       <fileset dir="build/lib">
         <!--<include name="avalon-merlin-demo-2.0.jar"/>-->
       </fileset>
     </classpath>

   </engine>

   <blocks>
     <fileset dir="../assembly/build/lib">
       <include name="avalon-assembly-demo-1.0.jar"/>
     </fileset>
     <fileset dir="build/lib">
       <include name="avalon-merlin-demo-2.0.jar"/>
     </fileset>
   </blocks>

</kernel>
