<container name="dbcp-manager">

    <classloader>
        <classpath>
            <repository>
                <resource id="avalon-framework:avalon-framework-api" version="4.1.5"/>
                <resource id="avalon-framework:avalon-framework-impl" version="4.1.5"/>

				<resource id="avalon-dbcp:avalon-dbcp-api" version="1.0.dev-0"/>
				<resource id="commons-pool:commons-pool" version="1.1"/>
				<resource id="commons-dbcp:commons-dbcp" version="1.1"/>
            </repository>
        </classpath>
    </classloader>
    
	<component name="dbcp-manager" class="org.apache.avalon.sql.DbcpConnectionManager" activation="startup">
		<configuration>
			<pool>
				<max-active></max-active>
				<min-idle></min-idle>
				<max-idle></max-idle>
				<max-wait></max-wait>
				<min-evict-idle-time></min-evict-idle-time>
				<time-between-evict-runs></time-between-evict-runs>
				<test-on-borrow></test-on-borrow>
				<test-on-return></test-on-return>
				<test-while-idle></test-while-idle>
			</pool>
			<datasources>
				<datasource name="hsql" default="true">
					<driver></driver>
					<db-url></db-url>
					<username>sa</username>
					<password></password>
				</datasource>
			</datasources>
		</configuration>
	</component>
    
</container>
