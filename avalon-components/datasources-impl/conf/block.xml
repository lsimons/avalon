
<!--
Thread Block deployment directive.
-->

<block>

   <info>
     <name>threads</name>
   </info>

   <services>
     <service type="org.apache.avalon.cornerstone.services.datasources.DataSourceSelector">
       <source>manager</source>
     </service>
   </services>

   <implementation>

     <engine>
       <classpath>
         <repository>
           <resource id="avalon-framework:avalon-framework-impl" version="SNAPSHOT"/>
           <resource id="excalibur-pool:excalibur-pool" version="1.2"/>
           <resource id="excalibur-datasource:excalibur-datasource" version="1.1.1"/>
           <resource id="cornerstone-datasources:cornerstone-datasources-api" version="SNAPSHOT"/>
           <resource id="cornerstone-datasources:cornerstone-datasources-impl" version="SNAPSHOT"/>
         </repository>
       </classpath>
     </engine>

     <component name="manager" 
        class="org.apache.avalon.cornerstone.blocks.datasources.DefaultDataSourceSelector" 
        activation="true">
     </component>

   </implementation>

</block>
