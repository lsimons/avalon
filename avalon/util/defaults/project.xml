<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE project [
  <!ENTITY % index SYSTEM "file:index.ent"> %index;
]>

<project>

  <extend>${avalon.buildsystem}/project-common.xml</extend>

  <groupId>&avalon-util-id;</groupId>
  <id>&avalon-util-defaults-id;</id>
  <currentVersion>&avalon-util-defaults-version;</currentVersion>

  <name>Avalon Property Defaults</name>
  <package>org.apache.avalon.util.defaults</package>
  <inceptionYear>2003</inceptionYear>
  <shortDescription>Avalon default property management.</shortDescription>

  <dependencies>

    <dependency>
      <groupId>&avalon-util-id;</groupId>
      <artifactId>&avalon-util-env-id;</artifactId>
      <version>&avalon-util-env-version;</version>
    </dependency>

    <!-- Building Dependencies -->
    <dependency>
      <groupId>&avalon-util-id;</groupId>
      <artifactId>&avalon-util-plugin-id;</artifactId>
      <version>&avalon-util-plugin-version;</version>
      <type>plugin</type>
    </dependency>
  </dependencies>
  
  <build>

    <sourceDirectory>${basedir}/src/java/</sourceDirectory>
    <unitTestSourceDirectory>${basedir}/src/test/</unitTestSourceDirectory>

    <unitTest>
      <includes>
        <include>**/*Test.*</include>
        <include>**/*TestCase.*</include>
      </includes>
      <excludes>
        <exclude>**/Abstract*.*</exclude>
      </excludes>
      <resources>
        <resource>
          <directory>${basedir}/src/test</directory>
          <includes>
            <include>**/*.x*</include>
            <include>**/*.properties</include>
            <include>**/*.keys</include>
          </includes>
        </resource>
      </resources>
    </unitTest>

    <resources>
      <resource>
        <directory>${basedir}/src/java</directory>
        <includes> 
          <include>**/*.properties</include>
        </includes>
      </resource>
      <resource>
        <directory>${basedir}</directory>
        <includes> 
          <include>snapshot.properties</include>
        </includes>
      </resource>
    </resources>

    <jars></jars>

  </build>
</project>
