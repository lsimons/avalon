<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE project [
  <!ENTITY % index SYSTEM "file:index.ent"> %index;
]>

<project>

  <extend>${basedir}/../../project-common.xml</extend>

  <groupId>&avalon-repository-id;</groupId>
  <id>&avalon-repository-api-id;</id>
  <currentVersion>&avalon-repository-api-version;</currentVersion>

  <name>Avalon Repository API</name>
  <package>org.apache.avalon.repository</package>
  <inceptionYear>2002</inceptionYear>
  <shortDescription>Avalon Repository API</shortDescription>
  
  <build>

    <sourceDirectory>${basedir}/src/java/</sourceDirectory>
    <unitTestSourceDirectory>${basedir}/src/test/</unitTestSourceDirectory>

    <unitTest>
      <includes>
        <include>**/*Test.*</include>
        <include>**/*TestCase.*</include>
      </includes>
      <excludes>
        <exclude>**/Abstract*.*</exclude>
      </excludes>
      <resources>
        <resource>
          <directory>${basedir}/src/test</directory>
          <includes>
            <include>**/*.x*</include>
          </includes>
        </resource>
      </resources>
    </unitTest>

    <resources>
      <resource>
        <directory>${basedir}/src/java</directory>
        <includes> 
          <include>**/*.properties</include>
        </includes>
      </resource>
      <resource>
        <directory>${basedir}/target/</directory>
        <includes>
          <include>*.meta</include>
        </includes>
      </resource>
    </resources>

    <jars></jars>

  </build>
</project>
