    <build>
        <sourceModifications>
            <sourceModification>
                <className>java.util.logging.Logger</className>
                <excludes>
                    <exclude>**/Jdk14Logger.java</exclude>
                </excludes>
            </sourceModification>
        </sourceModifications>
    </build>
