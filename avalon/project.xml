            <tag>Avalon4_0_final</tag>
        </version>
    </versions>

    <dependencies>
        <dependency>
            <id>junit</id>
            <version>3.8.1</version>
            <url>http://www.junit.org/</url>
        </dependency>

        <dependency>
          <id>xml-apis</id>
          <version>2.0.2</version>
        </dependency>

        <dependency>
          <id>xerces</id>
          <version>2.3.0</version>
