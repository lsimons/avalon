
<project default="jar:install" xmlns:maven="jelly:maven" xmlns:j="jelly:core" xmlns:util="jelly:util" xmlns:ant="jelly:ant">

  <!--
  Add the merlin.properties file.
  -->
  <postGoal name="java:compile">
    <ant:copy file="${maven.repo.local}/${pom.groupId}/properties/merlin.properties" 
       toDir="${maven.build.dir}/classes" verbose="yes"/>
  </postGoal>

  <preGoal name="jar:jar">
    <j:forEach var="dep" items="${pom.dependencies}">
        <unzip src="${pom.getDependencyPath( dep.getId() )}" 
          dest="${maven.build.dir}/classes">
          <patternset>
            <exclude name="META-INF/**"/>
            <exclude name="*.meta"/>
          </patternset>
        </unzip>
    </j:forEach>
  </preGoal>

</project>
