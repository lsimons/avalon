         <category name="aaaaa"/>
       </categories>
       <context class="MyContextImpl">
         <entry key="abc">
           <constructor class="java.io.File">here/there.xml</constructor>
         </entry>
         <entry key="batman">
           <constructor class="MyEntryClass">
             <param>abc</param>
             <param>def</param>
           </constructor>
