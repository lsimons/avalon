         <entry key="green-lantern">
           <import key="urn:avalon:classloader"/>
         </entry>
       </context>
       <dependencies>
         <dependency key="first-key" source="../comp"/>
         <dependency key="second-key">
           <select feature="color" value="red" match="equals"/>
           <select feature="publisher" value="ASF" match="exists" optional="true"/>
         </dependency>
       </dependencies>
       <stages>
         <stage key="urn:somewhere:my-extension" source="../comp"/>
         <stage key="urn:somewhere:another-extension">
           <select feature="speed" value="fast" match="equals"/>
           <select feature="publisher" value="ASF" match="exists" optional="true"/>
         </stage>
       </stages>
       <configuration>
         <something>
           <or/>
           <other/>
         </something>
       </configuration>
       <parameters>
         <parameter name="fred" value="blue"/>
         <parameter name="alice" value="pink"/>
       </parameters>
     </component>
   </container>
   <include name="include-1">
     <source>./somename.xml</source>
