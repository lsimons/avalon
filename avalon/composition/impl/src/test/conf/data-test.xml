<container name="test">

   <services>
     <service type="org.apache.playground.SomeComponent" version="1.0.0">
       <source>comp</source>
     </service>
   </services>

   <classloader>
     <library>
       <include>lib</include>
     </library>
     <classpath>
       <fileset dir="abcde">
         <include>fred.jar</include>
         <include>sally.jar</include>
       </fileset>
       <repository>
         <resource id="avalon-framework:avalon-framework-impl" version="4.1.5"/>
         <resource id="cornerstone-threads:cornerstone-threads-api"/>
       </repository>
       <repository>
         <resource id="xyz:xyz"/>
       </repository>
     </classpath>
   </classloader>

   <component name="comp" class="org.apache.playground.SomeComponent"/>

   <container name="xxx">
     <component name="comp-2" class="org.apache.playground.AnotherComponent">
