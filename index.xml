  </project>

  <project basedir="runtime/logging/providers/log4j/test">
    <info>
      <group>metro/logging</group>
      <name>metro-logging-log4j-test</name>
      <version>1.0.0</version>
      <status>SNAPSHOT</status> 
    </info>
    <dependencies>
      <include key="metro-logging-logkit-api"/>
      <include key="metro-logging-log4j" test="false"/>
      <include key="metro-transit-main"/>
    </dependencies>
  </project>

  <project basedir="runtime/logging/providers/logkit/api">
    <info>
      <group>metro/logging</group>
