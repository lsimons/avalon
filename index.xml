<?xml version="1.0" encoding="ISO-8859-1"?>

<index>

  <!-- EXTERNAL RESOURCES -->

  <resource>
    <info>
      <group>commons-cli</group>
      <name>commons-cli</name>
      <version>1.0</version>
      <type>jar</type>
    </info>
  </resource>

  <resource>
    <info>
      <group>log4j</group>
      <name>log4j</name>
      <version>1.2.8</version>
      <type>jar</type>
    </info>
    <gump>
      <alias>logging-log4j-12</alias>
    </gump>
  </resource>

  <!-- LOCAL PROJECTS -->

  <!-- Utitlities -->

  <project basedir="util/i18n">
    <info>
      <group>metro/util</group>
      <name>metro-util-i18n</name>
      <version>1.0.0</version>
      <type>jar</type>
    </info>
  </project>

  <project basedir="util/exception">
    <info>
      <group>metro/util</group>
      <name>metro-util-exception</name>
      <version>1.0.0</version>
      <type>jar</type>
    </info>
  </project>

  <project basedir="util/criteria">
    <info>
      <group>metro/util</group>
      <name>metro-util-criteria</name>
      <version>1.0.0</version>
      <type>jar</type>
    </info>
  </project>

  <project basedir="util/defaults">
    <info>
      <group>metro/util</group>
      <name>metro-util-defaults</name>
      <version>1.0.0</version>
      <status>SNAPSHOT</status> 
      <type>jar</type>
    </info>
  </project>

  <!-- Runtime -->

  <project basedir="runtime/extension/api">
    <info>
      <group>metro/extension</group>
      <name>metro-extension-api</name>
      <version>1.0.0</version>
      <status>SNAPSHOT</status> 
    </info>
  </project>

  <project basedir="runtime/extension/impl">
    <info>
      <group>metro/extension</group>
      <name>metro-extension-impl</name>
      <version>1.0.0</version>
      <status>SNAPSHOT</status> 
    </info>
    <dependencies>
      <include key="metro-extension-api"/>
    </dependencies>
  </project>

  <project basedir="configuration/api">
    <info>
      <group>metro/configuration</group>
      <name>metro-configuration-api</name>
      <version>1.0.0</version>
      <status>SNAPSHOT</status> 
    </info>
  </project>

  <project basedir="configuration/impl">
    <info>
      <group>metro/configuration</group>
      <name>metro-configuration-impl</name>
      <version>1.0.0</version>
      <status>SNAPSHOT</status> 
    </info>
    <dependencies>
      <include key="metro-configuration-api"/>
    </dependencies>
  </project>

  <!-- Transit -->

  <project basedir="transit/main">
    <info>
      <group>metro/transit</group>
      <name>metro-transit-main</name>
      <version>1.0.0</version>
      <status>SNAPSHOT</status> 
    </info>
  </project>

  <project basedir="transit/spi">
    <info>
      <group>metro/transit</group>
      <name>metro-transit-spi</name>
      <version>1.0.0</version>
      <status>SNAPSHOT</status> 
    </info>
    <dependencies>
      <include key="metro-logging-spi"/>
      <include key="metro-transit-main"/>
    </dependencies>
  </project>

  <project basedir="transit/plugin">
    <info>
      <group>metro/transit</group>
      <name>metro-transit-plugin</name>
      <version>1.0.0</version>
      <status>SNAPSHOT</status> 
    </info>
    <dependencies>
      <include key="commons-cli"/>
      <include key="metro-util-i18n"/>
      <include key="metro-util-exception"/>
      <include key="metro-util-defaults"/>
      <include key="metro-util-criteria"/>
      <include key="metro-transit-spi" tag="spi"/>
      <include key="metro-transit-main" tag="api"/>
      <include key="metro-logging-logkit-impl" build="false" test="false"/>
    </dependencies>
  </project>

  <project basedir="transit/demo">
    <info>
      <group>metro/transit</group>
      <name>metro-transit-demo</name>
      <version>1.0.0</version>
      <status>SNAPSHOT</status>
    </info>
    <dependencies>
      <include key="commons-cli"/>
      <include key="metro-util-i18n"/>
      <include key="metro-logging-api" tag="api"/>
    </dependencies>
  </project>

  <project basedir="transit/test">
    <info>
      <group>metro/transit</group>
      <name>metro-transit-test</name>
      <version>1.0.0</version>
      <status>SNAPSHOT</status>
    </info>
    <dependencies>
      <include key="metro-transit-plugin"/>
    </dependencies>
  </project>

  <project basedir="runtime/logging/api">
