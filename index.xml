      <name>metro-logging-logkit-impl</name>
      <version>1.0.0</version>
      <status>SNAPSHOT</status> 
    </info>
    <dependencies>
      <include key="metro-transit-main" runtime="false" tag="api"/>
      <include key="metro-logging-spi" tag="spi"/>
      <include key="metro-util-i18n"/>
      <include key="metro-util-exception"/>
      <include key="metro-logging-criteria"/>
      <include key="metro-logging-logkit-api"/>
