      <status>SNAPSHOT</status> 
    </info>
    <dependencies>
      <include key="metro-logging-spi"/>
      <include key="metro-util-i18n"/>
      <include key="metro-util-criteria"/>
      <include key="metro-util-defaults"/>
    </dependencies>
  </project>

  <project basedir="runtime/logging/providers/log4j/impl">
    <info>
      <group>metro/logging</group>
      <name>metro-logging-log4j</name>
      <version>1.0.0</version>
      <status>SNAPSHOT</status> 
    </info>
    <dependencies>
      <include key="metro-logging-spi" tag="spi"/>
      <include key="metro-util-i18n"/>
      <include key="metro-logging-criteria"/>
      <include key="metro-configuration-api"/>
      <include key="log4j" test="false"/>
