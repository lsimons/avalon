<project default="jar:install" xmlns:maven="jelly:maven" xmlns:j="jelly:core" xmlns:util="jelly:util" xmlns:ant="jelly:ant">

    <preGoal name="java:compile">
        <ant:path
            id="log4j.sources"
            location="${basedir}/log4j/src/java"/>
        <ant:path
            id="logkit.sources"
            location="${basedir}/logkit/src/java"/>
        <ant:path
            id="servletlogger.sources"
            location="${basedir}/servletlogger/src/java"/>
        
        <maven:addPath
            id="maven.compile.src.set"
            refid="log4j.sources"/>
        <maven:addPath
            id="maven.compile.src.set"
            refid="logkit.sources"/>
        <maven:addPath
            id="maven.compile.src.set"
            refid="servletlogger.sources"/>
    </preGoal>
    

</project>
