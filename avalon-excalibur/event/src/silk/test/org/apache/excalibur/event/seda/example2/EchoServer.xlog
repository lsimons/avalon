<logkit>
    <factories>
      <factory type="stream" class="org.apache.avalon.excalibur.logger.factory.StreamTargetFactory"/>
    </factories>

    <targets>
      <stream id="console">
        <stream>System.out</stream>
        <format type="avalon">
          %7.7{priority} %5.5{time}   [%8.8{category}] (%{context}): %{message}\n%{throwable}
        </format>
      </stream>
    </targets>

     <categories>
       <category name="receive" log-level="INFO">
         <log-target id-ref="console"/>
       </category>
       <category name="factory" log-level="ERROR">
         <log-target id-ref="console"/>
       </category>
       <category name="socket" log-level="INFO">
         <log-target id-ref="console"/>
       </category>
       <category name="server-socket" log-level="INFO">
         <log-target id-ref="console"/>
       </category>
       <category name="selector" log-level="INFO">
         <log-target id-ref="console"/>
       </category>
       <category name="manager" log-level="ERROR">
         <log-target id-ref="console"/>
       </category>
     </categories>
</logkit>
