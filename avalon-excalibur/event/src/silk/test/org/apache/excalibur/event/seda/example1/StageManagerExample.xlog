<logkit>
    <factories>
      <factory type="stream" class="org.apache.avalon.excalibur.logger.factory.StreamTargetFactory"/>
    </factories>

    <targets>
      <stream id="console">
        <stream>System.out</stream>
        <format type="avalon">
          %7.7{priority} %5.5{time}   [%8.8{category}] (%{context}): %{message}\n%{throwable}
        </format>
      </stream>
    </targets>

     <categories>
       <category name="foo" log-level="DEBUG">
         <log-target id-ref="console"/>
       </category>
       <category name="bar" log-level="DEBUG">
         <log-target id-ref="console"/>
       </category>
       <category name="foobar" log-level="DEBUG">
         <log-target id-ref="console"/>
       </category>
       <category name="timer" log-level="DEBUG">
         <log-target id-ref="console"/>
       </category>
       <category name="manager" log-level="DEBUG">
         <log-target id-ref="console"/>
       </category>
     </categories>
</logkit>
