  <classloader>
    <classpath>
      <artifact>jar:avalon/http/avalon-http-spi#SNAPSHOT</artifact>
      <artifact>jar:avalon/http/avalon-http-api#SNAPSHOT</artifact>
      <artifact>jar:servletapi/servletapi#2.3</artifact>
