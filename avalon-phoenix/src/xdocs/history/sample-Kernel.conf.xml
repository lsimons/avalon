<telanon>

 <permissions>

   <codebase location="${java.home}/mods/-" signers="barney,telanon3" >
     <permission class="java.io.FilePermission" name="${gecctt.home}/sandbox/-" 
                 actions="read, write, delete" />
     <permission class="java.util.PropertyPermission" name="gecctt.*" actions="read, write" />
     <permission class="java.lang.RuntimePermission" name="setIO" signers="fred" />
   </codebase>

   <codebase location="gecctt.jar" signers="gecctt" >
     <permission class="java.io.FilePermission" name="${java.home}/sandbox/-" 
                 actions="read, write, delete" />
     <permission class="java.util.PropertyPermission" name="gecctt.*" actions="read, write" />
   </codebase>

 </permissions>

 <naming-schema>
   <name name="/dev/kernel" interface="org.entaka.telanon.core.Kernel" />
 </naming-schema>

