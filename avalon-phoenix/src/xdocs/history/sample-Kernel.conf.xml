 <block name="/gecctt/sim1"
        class="org.entaka.telanon.gecctt.LogicSimulator" codebase="gecctt.jar" >

   <depends>
     <block-ref name="/gecctt/sim2" />
     <block-ref name="/gecctt/sim3" />
   </depends>

  </block>

  <block name="/gecctt/sim2" class="org.entaka.telanon.gecctt.LogicSimulator" codebase="gecctt.jar" />
  <block name="/gecctt/sim3" class="org.entaka.telanon.gecctt.LogicSimulator" codebase="gecctt.jar" />

  <block name="/dev/log-configurator" 
       class="org.entaka.telanon.core.base.DefaultLogConfigurator"
       block-type="kernel" >

    <configuration>
      <category name="Kernel"    target="default"     priority="5"/>
      <category name="Schedular"   target="default"     priority="5"/>
 
      <target name="default"    class="org.entaka.log.output.DefaultOutputLogTarget" >
      <!-- <param name="format" value="%6.6{time}   [%.12{category}]: %{message}\n" /> -->
      <!-- <param name="format" value="[%.14{category}]: %{message}\n" /> -->
      </target>
    </configuration>
 </block>

 <block name="/dev/schedular"
        class="org.entaka.telanon.core.base.DefaultSchedular" 
        block-type="kernel" >

   <roles>
     <role interface="org.entaka.telanon.core.Schedular" />
   </roles>

   <depends>
     <block-ref name="/dev/log-configurator" />
   </depends>

 </block>
 </blocks>
</telanon>
