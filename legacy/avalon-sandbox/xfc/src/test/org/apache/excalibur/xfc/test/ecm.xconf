<?xml version="1.0" encoding="UTF-8"?>

<ecm-xconf>

  <!-- XML Parser -->
  <role1 class="org.apache.excalibur.xfc.data.Component1">
    <parameter name="validate" value="false"/>
  </role1>

  <!-- XSLT Processor -->
  <role2>
     <parameter name="use-store" value="false"/>
  </role2>

  <!-- Xpath Processor -->
  <role3 class="org.apache.excalibur.xfc.data.Component3"/>

  <!-- Datasources -->
  <role4s>
    <a name="default">
      <dburl>jdbc:hsqldb:hsql://localhost:9002</dburl>
    </a>
    <a name="backup">
      <dburl>jdbc:hsqldb:hsql://localhost:9003</dburl>
    </a>
  </role4s>

</ecm-xconf>
