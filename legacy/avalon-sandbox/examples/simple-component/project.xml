  <repository>
    <connection>scm:annoncvs:pserver:cvs@cvs.apache.org:/home/cvs:avalon-sandbox/examples</connection>
    <url>http://cvs.apache.org/viewcvs.cgi/</url>
  </repository>

  <!-- any mailing lists for the project -->
  <mailingLists/>

  <!-- who the developers are for the project -->
  <developers>
   <developer>
      <name>J Aaron Farr</name>
      <id>farra</id>
      <email>aaron.farr@am.sony.com</email>
      <organization>Sony Electronics</organization>
      <roles>
        <role>Java Developer</role>
      </roles>
    </developer>
  </developers>

  <!-- jar files the project is dependent on -->
